<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Html.CSS("Site.css")
    @Html.CSS("bootstrap.min.css")
    @Html.Script("jquery-1.9.1.min.js")
    @Html.Script("bootstrap.min.js")
    @Html.Script("jquery.signalR-2.2.0.min.js")
    <script src="@Url.Content("~/signalr/hubs")" type="text/javascript"></script>
    @Html.Script("WikiGame.js")

</head>

<script type="text/javascript">
    var Site = {}

    Site.getVirtualPath = function () {
        return "@Url.Content("~")";
    }

    Site.getPathToAction = function (action, controller) {
        return Site.getVirtualPath() + controller + "/" + action;
    }


</script>
<body>
    <div class="pull-right" style="width:30%">
            @if (Request.IsAuthenticated)
            {
                <div class="form-group col-lg-4">
                    <strong id="Username">Hello, @User.Identity.Name</strong>
                </div>
                <div class="form-group col-lg-4">
                    <a class="col-md-5 btn btn-primary btn-block" href="@Url.Action("Profile", "Account")">Profile</a>
                </div>
                <div class="form-group col-lg-4">
                    <a class="col-md-5 btn btn-primary btn-block" href="@Url.Action("LogOff", "Account")">LogOff</a>
                </div>
                
            }

    </div>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
