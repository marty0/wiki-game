<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Html.CSS("Site.css")
    @Html.CSS("bootstrap.min.css")
    @Html.Script("jquery-1.9.1.min.js")
    @Html.Script("bootstrap.min.js")
    @Html.Script("jquery.signalR-2.2.0.min.js")
    <script src="@Url.Content("~/signalr/hubs")" type="text/javascript"></script>
    @Html.Script("WikiGame.js")

</head>

<script type="text/javascript">
    var Site = {}

    Site.getVirtualPath = function () {
        return "@Url.Content("~")";
    }

    Site.getPathToAction = function (action, controller) {
        return Site.getVirtualPath() + controller + "/" + action;
    }


</script>
<body>
    <div class="pull-right row">
            @if (Request.IsAuthenticated)
            {
                <div style=" padding-left: 15px; padding-right: 15px;">
                    <strong id="Username">@User.Identity.Name</strong>
                </div>
                <div class="col-md-3">
                    <a class=" btn btn-primary btn-xs" href="@Url.Action("Profile", "Account")">Profile</a>
                </div>
                <div class="col-md-3">
                    <a class=" btn btn-primary btn-xs" href="@Url.Action("LogOff", "Account")">LogOff</a>
                </div>
                
            }
            <div class="col-md-4">
                    <a class="btn btn-primary btn-xs" href="@Url.Action("Index", "Home")">Start Game</a>
                </div>

    </div>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
