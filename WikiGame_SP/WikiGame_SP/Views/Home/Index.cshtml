@model List<IEnumerable<WikiGame.Models.ScoreboardRecord>>
    @{
        ViewBag.Title = "Index";
    }

    <div class="container">
        <div class="page-header">
            <h1>Wiki game <small>Learn while you have fun</small></h1>
        </div>
        <div id="GamePanel">
            <fieldset class="">
                <div class="form-group col-lg-3">
                    @Html.DropDownList("CategoryID", (IEnumerable<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-2">
                    <input id="SinglePlayer" class="col-md-5 btn btn-primary btn-block" type="button" value="Single player" />
                </div>
                <div class="form-group col-lg-2">
                    <input id="SeekGame" class="col-md-5 btn btn-primary btn-block" type="button" value="Seek Game" />
                </div>
            </fieldset>
            <div id="Scoreboard">
                <div class="col-md-7">
                    <table class="table table-condensed">
                        <caption>Scoreboard</caption>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>User Name</th>
                                <th>Points</th>
                            </tr>
                        </thead>
                        @{int index = 0;}
                        @foreach (var user in Model[0])
                        {
                            index++;
                            <tr>
                                <th scope="row">@index</th>
                                <td>
                                    @user.userName
                                    @if (index == 1)
                                    { <img src="@Url.Content("~/Content/images/goldmedal.png")" height="18" /> }
                                    @if (index == 2)
                                    { <img src="@Url.Content("~/Content/images/silvermedal.png")" height="18" /> }
                                    @if (index == 3)
                                    { <img src="@Url.Content("~/Content/images/bronzemedal.png")" height="18" /> }
                                </td>
                                <td>@user.points</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
            <div id="lastMonth">
                <div class="col-md-7">
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseLastMonthScores" aria-expanded="false" aria-controls="collapseLastMonthScores">
                        Scores for the last month
                    </button>
                    <div class="collapse" id="collapseLastMonthScores">
                        <div class="well">
                            <table class="table table-condensed">
                                <caption>Scores for the last month</caption>
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>User Name</th>
                                        <th>Points</th>
                                    </tr>
                                </thead>
                                @{index = 0;}
                                @foreach (var user in Model[1])
                                {
                                    index++;
                                    <tr>
                                        <th scope="row">@index</th>
                                        <td>
                                            @user.userName
                                            @if (index == 1)
                                                    { <img src="@Url.Content("~/Content/images/goldmedal.png")" height="18" /> }
                                            @if (index == 2)
                                                    { <img src="@Url.Content("~/Content/images/silvermedal.png")" height="18" /> }
                                            @if (index == 3)
                                                    { <img src="@Url.Content("~/Content/images/bronzemedal.png")" height="18" /> }
                                        </td>
                                        <td>@user.points</td>
                                    </tr>
                            }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div id="rules">
                <div class="col-md-7" style="padding-top:25px;">
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseRules" aria-expanded="false" aria-controls="collapseRules">
                        What are the rules?
                    </button>
                    <div class="collapse" id="collapseRules">
                        <div class="well">
                            <p>
                                You are given a list of categories from which you can choose. Once the category is selected there are two buttons - for single-player and multiplayer accordingly.
                            </p>
                            <p>
                                Pressing the "Single player" button is starting the game immediately and you are given an random wiki page,
                                from which you have to reach wiki page which title should contain specific words, related to the chosen category.
                                Once you've reached the desired wiki page, you will be notified that you won and the amount of acquired points.
                            </p>
                            <p>
                                Pressing "Seek Game" would inform you that you are waiting for an opponent and when there is one the game will start.
                                The game is played on one versus one basis.
                                Both of the players are starting from a random wiki page and the game is over when one of them reaches desired wiki page.
                                The winner takes a notification for the acquired points and the other player is shown a message that he lost the game.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
