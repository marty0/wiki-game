@model IEnumerable<WikiGame.Models.ScoreboardRecord>
    @{
        ViewBag.Title = "Index";
    }

    <div class="container">
        <div class="page-header">
            <h1>Wiki game <small>Learn while you have fun</small></h1>
        </div>
        <div id="GamePanel">
            <fieldset class="">
                <div class="form-group col-lg-3">
                    @Html.DropDownList("CategoryID", (IEnumerable<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-2">
                    <input id="SinglePlayer" class="col-md-5 btn btn-primary btn-block" type="button" value="Single player" />
                </div>
                <div class="form-group col-lg-2">
                    <input id="SeekGame" class="col-md-5 btn btn-primary btn-block" type="button" value="Seek Game" />
                </div>
            </fieldset>
        </div>
        <div id="Scoreboard">
            <div class="col-md-7">
                <table class="table table-condensed">
                    <caption>Scoreboard</caption>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>User Name</th>
                            <th>Points</th>
                        </tr>
                    </thead>
                    @{int index = 0;}
                    @foreach (var user in Model)
                    {
                        index++;
                        <tr>
                            <th scope="row">@index</th>
                            <td>
                                @user.userName
                                @if (index == 1)
                                    { <img src="@Url.Content("~/Content/images/goldmedal.png")" height="18" /> }
                                @if (index == 2)
                                    { <img src="@Url.Content("~/Content/images/silvermedal.png")" height="18" /> }
                                @if (index == 3) 
                                    { <img src="@Url.Content("~/Content/images/bronzemedal.png")" height="18" /> }
                            </td>
                            <td>@user.points</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
