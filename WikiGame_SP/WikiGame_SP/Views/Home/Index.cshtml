@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="page-header">
        <h1>Wiki game <small>Learn while you have fun</small></h1>
    </div>
    @using (Html.BeginForm("Index", "GameWindow"))
    {
        <fieldset class="">
            <div class="form-group col-lg-3">
                @Html.DropDownList("CategoryID", (IEnumerable<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
            </div>
            <div class="form-group col-lg-1">
                <input class="col-md-5 btn btn-primary btn-block" type="submit" value="PLAY" />
            </div>
        </fieldset>
    }
</div>
